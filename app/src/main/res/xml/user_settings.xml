

    <PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <PreferenceCategory android:title="Settings" >
            <EditTextPreference
                android:title="URL for Question Data"
                android:summary="Enter the URL to retrieve question data"
                android:key="jsonURL"/>
        </PreferenceCategory>

        <PreferenceCategory android:title="Security Settings" >
            <EditTextPreference
                android:defaultValue="false"
                android:key="prefLockScreen"
                android:summary="Enter how often (in minutes) "
                android:title="Update Intervals (minutes)" >
            </EditTextPreference>
        </PreferenceCategory>

    </PreferenceScreen>

